<div class="banner">
  <div class="banner-content">
    <h1>Have a drink</h1>
    <p>It's all chemistry !</p>
    <div id= "btn-banner"> <%=link_to "Create a new cocktail", new_cocktail_path%> </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%@cocktails.each do |cocktail|%>
     <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class=card>
            <div class="card-title"><%= cocktail.name %></div>
          </div>
        <% end %>
      </div>
    <% end %>
 </div>
 </div>









